{
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": "./",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "noUnusedLocals": false,
        "removeComments": true,
        "strict": false,
        "strictPropertyInitialization": false,
        "target": "ES2015"
    },
    "include": [
        "*.ts",
        "**/*.ts"
    ],
    "exclude": [
        "./**/*.spec.ts"
    ]
}
